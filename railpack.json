{
  "steps": {
    "install": {
      "commands": [
        "python -m pip install --upgrade pip",
        "python -m pip install uv",
        "UV_NO_DEV=1 uv sync"
      ]
    }
  },
  "deploy": {
    "startCommand": "uv run uvicorn aiblock_mcp.server:app --host 0.0.0.0 --port ${PORT:-8000}"
  }
}

